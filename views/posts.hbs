<div class="row">
    <div class="col-md-12">
        <h2>
            Posts
            <a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each this.posts}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postDate}}</td>
                        <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                        <td>{{published}}</td>
                        <td><a class="btn btn-danger" href="/posts/delete/{{id}}">remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless this.posts}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>